@model IrishNationalStud.Models.Foals
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit a Foal's details</h2>

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DOB"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="DOB" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Sex"></label><br /><br />
            </div>
            <div class="col-5">
                <select asp-for="Sex" class="form-control">
                    <option value="Colt">Colt</option>
                    <option value="Filly">Filly</option>
                    <option value="Please Select">Please Select</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Colour"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Colour" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Sire"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Sire" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Dam"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Dam" class="form-control" /><br />
            </div>
        </div>
    </div>

        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

