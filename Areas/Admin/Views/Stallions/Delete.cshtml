@model IrishNationalStud.Models.Stallions
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete a Stallion's details</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label><br /><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DOB"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="DOB" disabled class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Sire"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Sire" disabled class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Dam"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Dam" disabled class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Colour"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Colour" disabled class="form-control" /><br />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>


