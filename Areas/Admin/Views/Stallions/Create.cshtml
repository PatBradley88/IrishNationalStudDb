@model IrishNationalStud.Models.Stallions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Add a Stallion</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label><br /><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DOB"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="DOB" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Sire"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Sire" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Dam"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Dam" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Colour"></label><br /><br />
            </div>
            <div class="col-5">
                <input asp-for="Colour" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}